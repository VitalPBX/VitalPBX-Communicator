<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialerDigit" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/numeric_button</item>
        <item name="android:textColor">@color/dark_grey_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <declare-styleable name="Numpad">
        <attr name="play_dtmf">
            <enum name="dont" value="0" />
            <enum name="play" value="1" />
        </attr>
    </declare-styleable>
</resources>